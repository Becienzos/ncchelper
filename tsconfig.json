{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@openstamanager/images/*": [
        "public/images/*"
      ],
      "@openstamanager/scss/*": [
        "resources/scss/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "resources/js/**/*",
    "vite.config.ts"
  ]
}