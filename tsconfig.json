{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true,
    "useDefineForClassFields": false,
    "jsx": "react",
    "jsxFactory": "m",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@osm/*": [
        "resources/js/*"
      ],
      "@osm-images/*": [
        "public/images/*"
      ],
      "@osm-scss/*": [
        "resources/scss/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "resources/js/**/*",
    "vite.config.ts"
  ]
}